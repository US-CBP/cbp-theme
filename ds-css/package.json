{
  "name": "cbp-ds-css",
  "version": "1.0.0",
  "description": "This is the CSS offering built upon the CBP UX Guidelines.  The CSS can be used with any web user interface or framework.",
  "main": "webpack.config.js",
  "author": "Creative Services",
  "license": "ISC",
  "contributors": [
    {
      "name": "David Y. Hodge",
      "email": "david.y.hodge@cbp.dhs.gov"
    },
    {
      "name": "John D. Higgins",
      "email": "john.d.higgins@associates.cbp.dhs.gov"
    },
    {
      "name": "Ray Robertson",
      "email": "ray.robertson@associates.cbp.dhs.gov"
    }
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/US-CBP/cbp-theme/tree/design-system/ds-css"
  },
  "engines": {
    "node": ">= 8"
  },
  "devDependencies": {
    "@babel/core": "^7.6.2",
    "@babel/plugin-transform-runtime": "^7.6.2",
    "@babel/preset-env": "^7.6.2",
    "@fortawesome/fontawesome-free": "^5.11.2",
    "babel-loader": "^8.0.6",
    "bulma": "^0.7.5",
    "clean-webpack-plugin": "^3.0.0",
    "css-loader": "^3.2.0",
    "eslint": "^6.5.1",
    "eslint-loader": "^3.0.2",
    "extract-text-webpack-plugin": "^4.0.0-beta.0",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^3.0.9",
    "mini-css-extract-plugin": "^0.8.0",
    "mkdirp": "^0.5.1",
    "node-sass": "^4.12.0",
    "optimize-css-assets-webpack-plugin": "^5.0.3",
    "pa11y-ci": "^2.3.0",
    "pa11y-ci-reporter-html": "^1.2.0",
    "resolve-url-loader": "^3.1.0",
    "roboto-fontface": "^0.10.0",
    "sass-loader": "^8.0.0",
    "stylelint": "^11.0.0",
    "stylelint-config-recommended": "^3.0.0",
    "stylelint-scss": "^3.11.1",
    "stylelint-webpack-plugin": "^1.0.2",
    "webpack": "^4.41.0",
    "webpack-cli": "^3.3.9",
    "webpack-dev-server": "^3.8.1"
  },
  "scripts": {
    "clean": "rimraf dist",
    "build-local": "rm -rf node_modules && npm i && npm run build && npm run local",
    "lint:scss": "stylelint > stylelint-errors.log \"src/styles/**/*.scss\" --fix --output-file stylelint-errors.log",
    "dev": "webpack --mode development",
    "build": "npm run clean && webpack --mode production && npm run lint:scss && npm run fafonts",
    "local": "webpack-dev-server --mode development",
    "sourcemap": "scss ./dist/css/cbp-ds.min.css ./dist/css/cbp-ds.min.css",
    "lint": "npm run lint:scss",
    "pa11y-ci": "./node_modules/.bin/pa11y-ci",
    "pa11y-test": "pa11y-ci --json > pa11y-ci-results.json",
    "pa11y-report": "pa11y-ci-reporter-html && open localhost-9000.html",
    "fadir": "mkdirp ./dist/font-awesome/",
    "fontdir": "mkdirp ./dist/roboto-fontface/fonts/",
    "copyfa": "cp -a ./node_modules/@fortawesome/fontawesome-free/webfonts/ ./dist/font-awesome/fonts/",
    "copyfont": "cp -a ./node_modules/roboto-fontface/fonts/roboto/ ./dist/roboto-fontface/fonts/roboto/",
    "fafonts": "npm run fadir && npm run fontdir && npm run copyfa && npm run copyfont"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint",
      "pre-push": "npm run lint"
    }
  }
}
