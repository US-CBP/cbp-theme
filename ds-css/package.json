    "webpack": "^4.41.0",
    "webpack-cli": "^3.3.9",
    "webpack-dev-server": "^3.8.1"
  },

"scripts": {
  "clean": "rimraf dist",
  "lint:scss": "stylelint > stylelint-errors.log \"src/styles/**/*.scss\" --fix --output-file stylelint-errors.log",
  "dev": "webpack --mode development",
  "build": "npm run clean && webpack --mode production && npm run lint:scss",
  "local": "webpack-dev-server --mode development",
  "sourcemap": "scss ./dist/css/cbp-ds.min.css ./dist/css/cbp-ds.min.css",
  "lint": "npm run lint:scss"
},
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint",
      "pre-push": "npm run lint"
    }
  }

}
